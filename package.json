{
  "name": "rekapu-extension",
  "version": "1.0.0",
  "description": "A browser extension that combines spaced repetition learning with website access control",
  "main": "index.js",
  "scripts": {
    "build": "npm test && webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "npm run test:js && npm run test:ts",
    "test:js": "node --test test/*.test.js",
    "test:ts": "npx tsx --test test/*.test.ts",
    "test:watch": "node --test --watch test/*.test.js",
    "test:algorithm": "node test/algorithm.test.js"
  },
  "keywords": [
    "chrome-extension",
    "spaced-repetition",
    "learning",
    "productivity",
    "website-blocking"
  ],
  "author": "Rekapu Team",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/chrome": "^0.1.28",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "html-webpack-plugin": "^5.6.4",
    "rimraf": "^6.1.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.10.9",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "jszip": "^3.10.1",
    "marked": "^17.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
